    "@types/koa-compose": "^3.2.5",
    "@types/koa-router": "^7.4.4",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.7.1",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "commitlint": "^17.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.21.0",
    "husky": "^8.0.1",
